@model Recycle.Models.Store

@{
    ViewData["Title"] = $"Store #{Model.Id} Details";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <h1 class="title-1 font-weight-bold mb-5">Store #@Model.Id</h1>
                <div class="mb-4">
                    <a asp-area="Seller" asp-controller="Stores" asp-action="Edit" asp-route-id="@Model.Id" class="btn title-1-btn outline-warning px-sm-5 mb-4 ml-3">Edit</a>
                </div>
            </div>
            <div class="form-container bg-white mb-5">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-form-item">
                            <label asp-for="Name"></label>
                            <p>@Html.DisplayFor(m => m.Name)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="Address"></label>
                            <p>@Html.DisplayFor(m => m.Address)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="PhoneNumber"></label>
                            <p>@Html.DisplayFor(m => m.PhoneNumber)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="OpeningHours"></label>
                            <p class="pre-line">@Html.DisplayFor(m => m.OpeningHours)</p>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="single-form-item">
                                    <label asp-for="LocationLatitude"></label>
                                    <p>@Html.DisplayFor(m => m.LocationLatitude)</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="single-form-item">
                                    <label asp-for="LocationLongitude"></label>
                                    <p>@Html.DisplayFor(m => m.LocationLongitude)</p>
                                </div>
                            </div>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DateLastModified"></label>
                            <p>@Html.DisplayFor(m => m.DateLastModified)</p>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between align-items-center flex-column-reverse flex-sm-row mt-5">
                            <a asp-area="Seller" asp-controller="Stores" asp-action="Index" class="btn align-self-stretch m-2">Back</a>
                        </div>
                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <span class="icon icon-home icon-land-lg txt-hover-bg" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
