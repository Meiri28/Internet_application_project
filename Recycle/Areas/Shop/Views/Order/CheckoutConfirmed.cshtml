@model int

@{
    ViewData["Title"] = "Order Confirmed";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="container py-6-desktop">
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center mb-5">
                        <span class="icon icon-checkmark2 icon-land" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="col-md-9 pl-md-5 text-center text-md-left">
                    <h1 class="title-1 font-weight-bold mb-5">Your purchase successed !</h1>
                    <p class="paragraph-1 mb-4">Order currently being processed.</p>
                    <p class="paragraph-1 mb-5">Your order hasn't shipped yet but our team are working,<br> you can check order status.</p>
                    <a asp-area="Account" asp-controller="Orders" asp-action="Index" class="btn btn-primary my-5">My Orders</a>
                </div>
            </div>
        </div>
    </div>
</section>
