<li class="nav-item">
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello, @Context.User.Identity.Name
        </button>
        <div class="dropdown-menu">
            @if (Context.User.IsInRole("Buyer"))
            {
                <a class="dropdown-item" asp-controller="Stores" asp-action="Create">Create Store</a>
            }
            else
            {
                <a class="dropdown-item" asp-controller="Stores" asp-action="MyStore">Manage Store</a>
            }
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Users" asp-action="LogOut">LogOut</a>
        </div>
    </div>
</li>
