@model Recycle.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div>
    @if (ViewData.ContainsKey("error_code"))
    {
        <p class="text-danger">@ViewData["error_code"] </p>
    }
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10 col-sm-2">
            price @ViewBag.product.Price
        </dd>
        <dt class="col-sm-10 col-sm-2">
            color @ViewBag.product.Color
        </dt>
        <dt class="col-sm-10 col-sm-2">
            @if (ViewBag.product.Pictures != null)
            {
                @foreach (ProductImage p in ViewBag.product.Pictures)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(p.Data)" />
                }
            }
            else
            {
                <p>No image</p>
            }
        </dt>
        <dt class="col-sm-10 col-sm-2">
            @if (ViewBag.product.Video != null)
            {
                <video src="data:video/mp4;base64,@Convert.ToBase64String(ViewBag.product.Video)" controls />
            }
            else
            {
                <p>No video</p>
            }
        </dt>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
